@model MedicalClinic.Models.HtmlService

@{
    ViewData["Title"] = "Добавить услугу";
}

<div class="container mt-5">
    <h1>@ViewData["Title"]</h1>

    <form asp-action="Add" method="post">
        <div class="form-group">
            <label for="Name">Название услуги:</label>
            <input type="text" id="Name" name="Service.Name" class="form-control" required />
        </div>
        <div class="form-group">
            <label for="Description">Описание:</label>
            <textarea id="Description" name="Service.Description" class="form-control"></textarea>
        </div>
        <div class="form-group">
            <label for="Price">Цена:</label>
            <input type="number" id="Price" name="Service.Price" class="form-control" required />
        </div>
        <div class="form-group">
            <label for="IsActive">Активно:</label>
            <input type="checkbox" id="IsActive" name="Service.IsActive" checked />
            <span asp-validation-for="Service.IsActive" class="text-danger"></span>
        </div>

        <div>
            <label>Выберите типы врачей:</label>
            @foreach (var doctorType in Model.DoctorTypes)
            {
                <div class="form-check">
                    <input type="checkbox" class="form-check-input" name="SelectedDoctorTypeIds" value="@doctorType.Id" id="DoctorType_@doctorType.Id" />
                    <label class="form-check-label" for="DoctorType_@doctorType.Id">@doctorType.Name</label>
                </div>
            }
        </div>

        <button type="submit" class="btn btn-primary mt-3">Добавить</button>
    </form>
</div>
