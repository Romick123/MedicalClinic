@model List<MedicalClinic.Models.ServiceList>

@{
    ViewData["Title"] = "Список услуг";
}

<div class="container mt-4">
    <h1 class="mb-4">@ViewData["Title"]</h1>

    <div class="mb-3">
        <a class="btn btn-primary" href="@Url.Action("Report", "Account", new { client = ViewBag.Client, doctor = ViewBag.Doctor, type = ViewBag.Type })">Сгенерировать отчет</a>
    </div>

    @if (Model.Count == 0)
    {
        <div class="alert alert-info">Нет услуг для отображения.</div>
    }
    else
    {
        <table class="table table-striped table-hover">
            <thead class="thead-dark">
                <tr>
                    <th>Дата и время</th>
                    <th>Клиент</th>
                    <th>Врач</th>
                    <th>Услуга</th>
                    <th>Цена</th>
                    <th>Описание</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var service in Model)
                {
                    <tr>
                        <td>@service.DateTime.ToString("dd.MM.yyyy HH:mm")</td>
                        <td>@service.Client.Surname @service.Client.Name</td>
                        <td>@service.Doctor.Surname @service.Doctor.Name</td>
                        <td>@service.Service.Name</td>
                        <td>@service.Price руб.</td>
                        <td>@service.Description</td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>
