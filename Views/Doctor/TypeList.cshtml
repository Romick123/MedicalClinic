@model List<MedicalClinic.Models.DoctorType>

@{
    ViewData["Title"] = "Список типов врачей";
}

<div class="container mt-5">
    <h1 class="mb-4">@ViewData["Title"]</h1>

    @if (ViewBag.Admin)
    {
        <a class="btn btn-primary mb-3" href="@Url.Action("TypeAdd", "Doctor")">Добавить тип врачей</a>
    }

    @if (Model.Count == 0)
    {
        <p>Нет типов врачей для отображения.</p>
    }
    else
    {
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Название</th>
                    <th>Описание</th>
                    @if (ViewBag.Admin)
                    {
                        <th>Действия</th>
                    }
                </tr>
            </thead>
            <tbody>
                @foreach (var type in Model)
                {
                    <tr>
                        <td>@type.Name</td>
                        <td>@type.Description</td>
                        @if (ViewBag.Admin)
                        {
                            <td>
                                <a class="btn btn-warning" href="@Url.Action("TypeUpdate", "Doctor", new { id = type.Id })">Редактировать</a>
                            </td>
                        }
                    </tr>
                }
            </tbody>
        </table>
    }
</div>
