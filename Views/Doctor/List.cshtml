@model List<MedicalClinic.Models.Human>

@{
    ViewData["Title"] = "Список врачей";
}

<div class="container mt-5">
    <h1 class="mb-4">@ViewData["Title"]</h1>
    <a class="btn btn-secondary mb-3" href="@Url.Action("TypeList", "Doctor")">Группы врачей</a>

    @if (Model.Count == 0)
    {
        <p>Нет врачей для отображения.</p>
    }
    else
    {
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Фамилия</th>
                    <th>Имя</th>
                    <th>Отчество</th>
                    <th>Статус</th>
                    <th>Действия</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var doctor in Model)
                {
                    <tr>
                        <td>@doctor.Surname</td>
                        <td>@doctor.Name</td>
                        <td>@doctor.Patronymic</td>
                        <td>@(doctor.IsActive ? "Работает" : "Недоступен")</td>
                        <td>
                            <a class="btn btn-info" href="@Url.Action("Index", "Account", new { id = doctor.Id })">Просмотреть</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>
